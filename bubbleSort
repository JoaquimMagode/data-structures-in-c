#include <stdio.h>
void bubbleSort(int arr[]);
int binarySearch(int arr[], int target);

int main() {
    // Write C code here
    int arr[] = {2,4,3,1,6,5};
    int target = 2;
    
    
    bubbleSort(arr);
    
    
    printf("Sorted array \n");
    for(int i=0;i<6;i++){
        printf("%d ",arr[i]);
    }
    
    int result = binarySearch(arr,target);
    printf("\n");
    if(result != -1){
        printf("Element %d find at index %d",target, result);
    }else{
        printf("Element not found in array");
    }
    

    return 0;
}

void bubbleSort(int arr[]){
    int size = 6;
    int temp;
    
    for(int i=0;i<size;i++){
        for(int j=0;j<size-1;j++){
            if(arr[j] > arr[j+1]){
                temp = arr[j+1];
                arr[j+1] = arr[j];
                arr[j] = temp;
            }
        }
    }
}
int binarySearch(int arr[], int target){
    int left = 0;
    int right = 6;
    
    while(left <= right){
        int mid = (left + right) / 2;
        if(arr[mid] == target){
            return mid;
        }else if(arr[mid] < target){
            left = mid + 1;
        }else{
            right = mid - 1;
        }
        
    }
    
    for(int i=0;i<6;i++){
        
    }
    return-1;
}
